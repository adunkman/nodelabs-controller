html {
  background-color: #000;
  color: #fff;
  font-family: 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  margin: 0;
  font-size: 14pt;
}

body { padding: 0; margin: 0; }
table { width: 100%; height: 100%; }
th { text-transform: uppercase; }
td { font-size: 150%; }
td.username { width: 1%; text-align: right; padding-right: 10px; }
td.status { color: #000; text-align: center; }
td.completed { background-color: #0f0; }